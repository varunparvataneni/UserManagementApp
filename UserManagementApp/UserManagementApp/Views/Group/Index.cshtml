@model IEnumerable<UserManagementApp.Models.GroupModel>

@{
    ViewBag.Title = "Groups";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}

<h2 class="form-signin-heading">Groups</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupActive)
        </th>
        <th>
            <label class="control-label">Actions</label>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GroupID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupActive)
        </td>
        <td>
            @if (HttpContext.Current.Session["List Users"].ToString() == "True")
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.GroupID, item })
            }
            </td>
    </tr>
}

</table>
