<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DashBoard</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (HttpContext.Current.Session["Logout"].ToString() == "True" || HttpContext.Current.Session["About"].ToString() == "True")
                    {
                        <li class="menu-item dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Home <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                @if (HttpContext.Current.Session["Logout"].ToString() == "True")
                                {
                                    <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                                }
                                @if (HttpContext.Current.Session["About"].ToString() == "True")
                                {
                                    <li>@Html.ActionLink("About", "About", "Home")</li>
                                }
                            </ul>
                        </li>
                    }
                    @if (HttpContext.Current.Session["Create User"].ToString() == "True" || HttpContext.Current.Session["Create Group"].ToString() == "True" ||
                        HttpContext.Current.Session["Link User"].ToString() == "True" || HttpContext.Current.Session["Link Group"].ToString() == "True")
                    {
                        <li class="menu-item dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Operator <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                @if (HttpContext.Current.Session["Create User"].ToString() == "True")
                                {
                                    <li>@Html.ActionLink("Create User", "Create", "User")</li>
                                }
                                @if (HttpContext.Current.Session["Create Group"].ToString() == "True")
                                {
                                    <li>@Html.ActionLink("Create Group", "Create", "Group")</li>
                                }
                                @if (HttpContext.Current.Session["Link User"].ToString() == "True")
                                {
                                    <li>@Html.ActionLink("Link User", "LinkUser", "User")</li>
                                }
                                @if (HttpContext.Current.Session["Link Group"].ToString() == "True")
                                {
                                    <li>@Html.ActionLink("Link Group", "Index", "Group")</li>
                                }
                            </ul>
                        </li>
                    }
                    @if (HttpContext.Current.Session["Users"].ToString() == "True")
                    {
                        <li class="menu-item dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Maintain <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Users", "Index", "User")</li>
                            </ul>
                        </li>
                    }
                    @if (HttpContext.Current.Session["List Users"].ToString() == "True")
                    {
                        <li class="menu-item dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Report <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("List Users", "UserReport", "Report")</li>
                            </ul>
                        </li>
                    }
                    </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Argility- User Management Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
